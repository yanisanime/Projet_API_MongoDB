<!DOCTYPE html>
<html>
<head>
  <title>Ajouter une Tâche</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1 style="color: white;">Gestionnaire de Tâches</h1>


<button onclick="window.location.href='/'" class="BtnRettour">Retour</button>

<div class="container">

  <h1>Nouvelle Tâche</h1>

  <form action="/tasks" method="POST">

    <!-- TITRE -->
    <label for="titre">Titre:</label>
    <input type="text" id="titre" name="titre" required>

    <!-- DESCRIPTION -->
    <label for="description">Description:</label>
    <textarea id="description" name="description"></textarea>

    <!-- ECHEANCE -->
    <label for="echeance">Échéance:</label>
    <input type="date" id="echeance" name="echeance">


    <!-- Groupe Statut, Priorité et Catégorie -->
    <div class="inline-group">
      <!-- STATUT -->
      <div>
        <label for="statut">Statut:</label>
        <select id="statut" name="statut">
          <option value="à faire">À faire</option>
          <option value="en cours">En cours</option>
          <option value="terminée">Terminée</option>
          <option value="annulée">Annulée</option>
        </select>
      </div>

      <!-- PRIORITÉ -->
      <div>
        <label for="priorite">Priorité:</label>
        <select id="priorite" name="priorite">
          <option value="basse">Basse</option>
          <option value="moyenne">Moyenne</option>
          <option value="haute">Haute</option>
          <option value="critique">Critique</option>
        </select>
      </div>

      <!-- CATÉGORIE -->
      <div>
        <label for="categorie">Catégorie:</label>
        <select id="categorie" name="categorie">
          <option value="travail">Travail</option>
          <option value="personnel">Personnel</option>
          <option value="autre">Autre</option>
        </select>
      </div>
    </div>


    <!-- AUTEUR -->
    <fieldset>
      <legend>Auteur</legend>

      <div class="inline-group">
        <!-- NOM -->
        <div>
          <label for="nom">Nom:</label>
          <input type="text" id="nom" name="auteur[nom]" required>
        </div>

        <!-- PRÉNOM -->
        <div>
          <label for="prenom">Prénom:</label>
          <input type="text" id="prenom" name="auteur[prenom]" required>
        </div>
      </div>

      <!-- EMAIL (restant en dessous) -->
      <label for="email">Email:</label>
      <input type="email" id="email" name="auteur[email]" required>
    </fieldset>


    <!-- ETIQUETTE -->
    <label for="etiquettes">Etiquettes:</label>
    <textarea id="etiquettes" name="etiquettes"></textarea>

    <!-- SOUS TACHES -->
    <fieldset>
      <legend>Sous-tâches</legend>

      <div id="sousTachesContainer">
        <!-- Les sous-tâches seront ajoutées ici dynamiquement -->
      </div>

      <button type="button" id="ajouterSousTache">Ajouter une sous-tâche</button>
    </fieldset>

    <!-- COMMENTAIRE -->
    <fieldset>
      <legend>Commentaires</legend>
    
      <div id="commentairesContainer">
        <!-- Les commentaires seront ajoutés ici dynamiquement -->
      </div>
    
      <button type="button" id="ajouterCommentaire">Ajouter un commentaire</button>
    </fieldset>


    <!-- AJOUTER UNE TACHE -->
     <div class="BtnEnLigne">
      <button type="submit" class="BtnAjouterTask">Ajouter</button>
      <button onclick="window.location.href='/'" class="BtnAnnulerAjouterTask">Annuler</button>
     </div>

  </form>
</div>



  <script src="/js/script.js"></script> 
</body>
</html>
