<!DOCTYPE html>
<html>
<head>
  <title>Ajouter une Tâche</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>Nouvelle Tâche</h1>

  <form action="/tasks" method="POST">

    <!-- TITRE -->
    <label for="titre">Titre:</label>
    <input type="text" id="titre" name="titre" required>

    <!-- DESCRIPTION -->
    <label for="description">Description:</label>
    <textarea id="description" name="description"></textarea>

    <!-- ECHEANCE -->
    <label for="echeance">Échéance:</label>
    <input type="date" id="echeance" name="echeance">

    <!-- STATUS -->
    <label for="statut">Statut:</label>
    <select id="statut" name="statut">
      <option value="à faire">À faire</option>
      <option value="en cours">En cours</option>
      <option value="terminée">Terminée</option>
      <option value="annulée">Annulée</option>
    </select>

    <!-- PRIORITE -->
    <label for="priorite">Priorité:</label>
    <select id="priorite" name="priorite">
      <option value="basse">Basse</option>
      <option value="moyenne">Moyenne</option>
      <option value="haute">Haute</option>
      <option value="critique">Critique</option>
    </select>

    <!-- AUTEUR -->
    <fieldset>
      <legend>Auteur</legend>

      <label for="nom">Nom:</label>
      <input type="text" id="nom" name="auteur[nom]" required>

      <label for="prenom">Prénom:</label>
      <input type="text" id="prenom" name="auteur[prenom]" required>

      <label for="email">Email:</label>
      <input type="email" id="email" name="auteur[email]" required>
    </fieldset>

    <!-- CATEGORIE -->
    <label for="categorie">Categorie:</label>
    <select id="categorie" name="categorie">
      <option value="travail">Travail</option>
      <option value="personnel">Personnel</option>
      <option value="autre">Autre</option>
    </select>

    <!-- ETIQUETTE -->
    <label for="etiquettes">Etiquettes:</label>
    <textarea id="etiquettes" name="etiquettes"></textarea>

    <!-- SOUS TACHES -->
    <fieldset>
      <legend>Sous-tâches</legend>

      <div id="sousTachesContainer">
        <div class="sousTache">
          <label for="sousTacheTitre">Titre:</label>
          <input type="text" name="sousTaches[0][titre]" required>

          <label for="sousTacheStatut">Statut:</label>
          <select name="sousTaches[0][statut]">
            <option value="à faire">À faire</option>
            <option value="en cours">En cours</option>
            <option value="terminée">Terminée</option>
            <option value="annulée">Annulée</option>
          </select>

          <label for="sousTacheEcheance">Échéance:</label>
          <input type="date" name="sousTaches[0][echeance]">
        </div>
      </div>

      <button type="button" id="ajouterSousTache">Ajouter une sous-tâche</button>
    </fieldset>

    <!-- COMMENTAIRE -->
    <label for="commentaire">Commentaire:</label>
    <textarea id="commentaire" name="commentaire"></textarea>


    <!-- AJOUTER UNE TACHE -->
    <button type="submit">Ajouter</button>

  </form>

  <div class="BtnRettour">
      <a href="/">Retour</a>
  </div>

  <script src="/js/script.js"></script> 
</body>
</html>
